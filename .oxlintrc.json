{
  "plugins": [
    "typescript",
    "unicorn",
    "oxc",
    "import",
    "jsdoc",
    "node",
    "promise"
  ],
  "categories": {
    "correctness": "warn",
    "suspicious": "warn",
    "pedantic": "warn",
    "perf": "warn",
    "style": "warn",
    "restriction": "warn",
    "nursery": "warn"
  },
  "rules": {
    "no-async-await": 0,
    "yoda": 0,
    "unicorn/no-null": 0,
    "no-undef": 0,
    "max-lines-per-function": [
      1,
      {
        "max": 50,
        "skipBlankLines": true,
        "skipComments": true,
        "IIFEs": true
      }
    ],
    "max-depth": [
      2,
      {
        "max": 4
      }
    ],
    "explicit-function-return-type": 0,
    "no-rest-spread-properties": 0,
    "no-optional-chaining": 0,
    "no-ternary": 0,
    "sort-imports": 0,
    "unicorn/prefer-includes": 0,
    "unicorn/no-array-for-each": 0,
    "filename-case": 0
  },
  "overrides": [
    {
      "files": ["*.astro", "*.svelte"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
